<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0f8ff"
    tools:context=".fragments.regFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Perfil -->
            <TextView
                android:id="@+id/Registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Registros"
                android:textColor="#005A9C"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ========= View 1 ========= -->
            <View
                android:id="@+id/registro_1"
                style="@style/cardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/Registro"
                />

            <TextView
                android:id="@+id/Frequencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationZ="30dp"
                android:text="Frequência Cardíaca"
                android:fontFamily="@font/kanit_bold"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/registro_1"
                app:layout_constraintTop_toTopOf="@id/registro_1"
                />

            <TextView
                android:id="@+id/numberFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationZ="30dp"
                android:text="110"
                android:fontFamily="@font/kanit_bold"
                android:textSize="60sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/Frequencia"
                app:layout_constraintStart_toStartOf="@id/Frequencia"
                app:layout_constraintTop_toBottomOf="@id/Frequencia"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationZ="30dp"
                android:text="18/06/2023 23:13:42"
                android:fontFamily="@font/kanit_bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/Frequencia"
                app:layout_constraintEnd_toEndOf="@id/Frequencia"
                app:layout_constraintTop_toBottomOf="@id/numberFreq"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationZ="30dp"
                android:src="@drawable/freq"
                app:layout_constraintEnd_toEndOf="@id/registro_1"
                app:layout_constraintTop_toTopOf="@id/registro_1"
                app:layout_constraintBottom_toBottomOf="@id/registro_1"
                />

            <!-- ========= View 2 ========= -->
            <View
                android:id="@+id/registro_2"
                style="@style/cardView"
                android:layout_width="match_parent"

                android:layout_height="200dp"
