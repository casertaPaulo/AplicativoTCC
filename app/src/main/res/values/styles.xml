<?xml version="1.0" encoding="utf-8"?>
<resources>

 <!-- Container de EMAIL, LOGIN e BOTÃO ENTRAR -->
 <style name="ContainerComponents">
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
 </style>

 <!-- Style Para Todos Os EDIT's Iguais -->
 <style name="Edits">
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:background">@drawable/edit_background</item>
  <item name="android:padding">20dp</item>
  <item name="android:layout_marginLeft">40dp</item>
  <item name="android:layout_marginRight">40dp</item>
  <item name="android:layout_marginTop">15dp</item>
  <item name="android:maxLines">1</item>
  <item name="android:singleLine">true</item>
  <item name="android:maxLength">45</item>
  <item name="android:textColorHint">@color/white</item>
  <item name="android:textColor">@color/white</item>
  <item name="fontFamily">@font/kanit_bold</item>
 </style>

 <!-- Adiciona Sombra aos Edtis -->
 <style name="EditsWithShadow" parent="Edits">
  <item name="android:elevation">20dp</item>
 </style>

 <!-- Adiciona Sombra aos Edtis -->
 <style name="EditShadow">

 </style>

<!-- Estilo do Botão de Criar Conta -->
 <style name="btn_CriarConta">
  <item name="android:layout_width">wrap_content</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginLeft">40dp</item>
  <item name="android:layout_marginRight">40dp</item>
  <item name="android:layout_marginTop">15dp</item>
  <item name="android:background">@drawable/btn_cadastrar</item>
  <item name="android:paddingLeft">30dp</item>
  <item name="android:paddingRight">30dp</item>
  <item name="android:textAllCaps">false</item>
  <item name="android:textColor">@color/white</item>
  <item name="android:textSize">20sp</item>
  <item name="android:textStyle">bold</item>
 </style>

 <!-- Estilo Aplicado ao Botão do Material Design -->
 <style name="Widget.Material3.Button.ElevatedButton">
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="backgroundTint">@color/white</item>
  <item name="android:layout_marginLeft">40dp</item>
  <item name="android:layout_marginRight">40dp</item>
  <item name="android:layout_marginTop">20dp</item>
  <item name="android:padding">15dp</item>
  <item name="android:textAllCaps">false</item>
  <item name="android:textColor">@color/azul_claro</item>
  <item name="android:textSize">23sp</item>
  <item name="fontFamily">@font/kanit_bold</item>
  <item name="rippleColor">#808080</item>
 </style>

 <!-- Estilo Aplicado aos Cards de Informações (Views) -->
 <style name="cardView">
   <item name="android:background">@drawable/card_container</item>
  <item name="android:layout_marginStart">20dp</item>
  <item name="android:layout_marginEnd">20dp</item>
  <item name="android:layout_marginTop">20dp</item>
  <item name="android:elevation">20dp</item>
  <item name="background">@drawable/edit_shadow</item>


 </style>


</resources>